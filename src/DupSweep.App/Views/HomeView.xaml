<UserControl x:Class="DupSweep.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:HomeViewModel}"
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="340" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Folder Selection -->
        <Grid Grid.Column="0" Margin="0,0,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Section Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="스캔 폴더"
                           Style="{StaticResource TitleLarge}" />
                <TextBlock Text="중복 파일을 찾을 폴더를 추가하세요"
                           Style="{StaticResource Caption}"
                           Margin="0,4,0,0" />
            </StackPanel>

            <!-- Folder Drop Zone / List -->
            <Border Grid.Row="1"
                    Style="{StaticResource Card}">
                <Grid>
                    <!-- Empty State (Drop Zone) -->
                    <Border x:Name="DropZone"
                            BorderThickness="2"
                            CornerRadius="8"
                            Margin="0"
                            Visibility="{Binding SelectedFolders.Count, Converter={StaticResource InverseIntToVisibilityConverter}, FallbackValue=Visible}"
                            AllowDrop="True"
                            Drop="DropZone_Drop"
                            DragOver="DropZone_DragOver">
                        <Border.BorderBrush>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Rectangle StrokeDashArray="6 3"
                                               Stroke="{StaticResource BorderBrush}"
                                               StrokeThickness="2"
                                               Width="1" Height="1"
                                               RadiusX="0.5" RadiusY="0.5" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.BorderBrush>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border Width="80" Height="80"
                                    CornerRadius="40"
                                    Background="{StaticResource BackgroundBrush}"
                                    HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FolderPlus"
                                                         Width="40" Height="40"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBrush}" />
                            </Border>

                            <TextBlock Text="폴더를 여기에 놓으세요"
                                       Style="{StaticResource TitleMedium}"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0" />
                            <TextBlock Text="또는 아래 버튼을 클릭하여 탐색"
                                       Style="{StaticResource Caption}"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,20" />

                            <Button Content="폴더 찾아보기"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding AddFolderCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="28,12" />
                        </StackPanel>
                    </Border>

                    <!-- Folder List -->
                    <DockPanel Visibility="{Binding SelectedFolders.Count, Converter={StaticResource IntToVisibilityConverter}, FallbackValue=Collapsed}">
                        <!-- Actions Bar -->
                        <Border DockPanel.Dock="Top"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="8"
                                Padding="12"
                                Margin="0,0,0,16">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button Content="모두 지우기"
                                            Style="{StaticResource GhostButton}"
                                            Command="{Binding ClearFoldersCommand}"
                                            Foreground="{StaticResource ErrorBrush}"
                                            Padding="12,6" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource PrimaryButton}"
                                            Command="{Binding AddFolderCommand}"
                                            Padding="16,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center" />
                                            <TextBlock Text="폴더 추가" Margin="8,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Folder Items -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SelectedFolders}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}"
                                                CornerRadius="10"
                                                Padding="16,12"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="44" Height="44"
                                                        CornerRadius="10"
                                                        Background="{StaticResource AccentLightBrush}"
                                                        Opacity="0.15">
                                                </Border>
                                                <materialDesign:PackIcon Grid.Column="0"
                                                                         Kind="Folder"
                                                                         Width="24" Height="24"
                                                                         Foreground="{StaticResource AccentBrush}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />

                                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Path=., Converter={StaticResource PathToFolderNameConverter}}"
                                                               Style="{StaticResource TitleSmall}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding}"
                                                               Style="{StaticResource Caption}"
                                                               TextTrimming="CharacterEllipsis"
                                                               Margin="0,2,0,0" />
                                                </StackPanel>

                                                <Button Grid.Column="2"
                                                        Style="{StaticResource IconButton}"
                                                        Command="{Binding DataContext.RemoveFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="폴더 제거">
                                                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Start Button -->
            <Button Grid.Row="2"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding StartScanCommand}"
                    IsEnabled="{Binding CanStartScan}"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    Padding="32,14">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" VerticalAlignment="Center" />
                    <TextBlock Text="스캔 시작" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Right Panel - Options -->
        <Border Grid.Column="1" Style="{StaticResource Card}" Padding="0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16,16,14,16">
                <StackPanel>

                    <!-- 스캔 대상 -->
                    <TextBlock Text="스캔 대상"
                               Style="{StaticResource TitleSmall}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <StackPanel Margin="0,0,0,20">
                        <CheckBox IsChecked="{Binding ScanAllFiles}"
                                  Margin="0,0,0,12">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileMultiple" Width="18" Height="18"
                                                             VerticalAlignment="Center" Margin="0,0,8,0"
                                                             Foreground="{StaticResource AccentBrush}" />
                                    <TextBlock Text="모든 파일" VerticalAlignment="Center" FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock Text="확장자 무관하게 모든 파일의 중복 탐지 (해시 기반)"
                                           Style="{StaticResource Caption}" Margin="26,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,12" />

                        <TextBlock Text="유사도 비교 대상"
                                   Style="{StaticResource Caption}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8" />

                        <CheckBox IsChecked="{Binding ScanImages}"
                                  Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Image" Width="18" Height="18"
                                                         VerticalAlignment="Center" Margin="0,0,8,0"
                                                         Foreground="{StaticResource AccentBrush}" />
                                <TextBlock Text="이미지" VerticalAlignment="Center" />
                                <TextBlock Text="(JPG, PNG, GIF, BMP, WebP...)"
                                           Style="{StaticResource Caption}"
                                           VerticalAlignment="Center" Margin="8,0,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding ScanVideos}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Video" Width="18" Height="18"
                                                         VerticalAlignment="Center" Margin="0,0,8,0"
                                                         Foreground="{StaticResource AccentBrush}" />
                                <TextBlock Text="비디오" VerticalAlignment="Center" />
                                <TextBlock Text="(MP4, AVI, MKV, MOV...)"
                                           Style="{StaticResource Caption}"
                                           VerticalAlignment="Center" Margin="8,0,0,0" />
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>

                    <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,16" />

                    <!-- 감지 조건 -->
                    <TextBlock Text="감지 조건"
                               Style="{StaticResource TitleSmall}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <StackPanel Margin="0,0,0,20">
                        <CheckBox IsChecked="{Binding UseHashComparison}"
                                  Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="해시 비교 (정확한 중복)" />
                                <TextBlock Text="파일 내용이 완전히 동일한 파일 탐지"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding UseSizeComparison}"
                                  Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="용량 일치" />
                                <TextBlock Text="파일 크기가 동일한 파일만 비교"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding UseResolutionComparison}"
                                  Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="해상도 일치" />
                                <TextBlock Text="이미지/비디오 해상도가 동일한 파일만 비교"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding MatchCreatedDate}"
                                  Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="생성 날짜 일치" />
                                <TextBlock Text="파일 생성 날짜가 동일한 파일만 비교"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding MatchModifiedDate}"
                                  Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="수정 날짜 일치" />
                                <TextBlock Text="파일 수정 날짜가 동일한 파일만 비교"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding UseImageSimilarity}"
                                  Margin="0,0,0,4">
                            <StackPanel>
                                <TextBlock Text="이미지 유사도 비교" />
                                <TextBlock Text="비슷해 보이는 이미지 탐지 (pHash)"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <!-- Image Similarity Threshold -->
                        <StackPanel Margin="24,4,0,8"
                                    Visibility="{Binding UseImageSimilarity, Converter={StaticResource BoolToVisibilityConverter}}">
                            <DockPanel Margin="0,0,0,4">
                                <TextBlock Text="{Binding SimilarityThreshold, StringFormat={}{0:0}%}"
                                           DockPanel.Dock="Right"
                                           Foreground="{StaticResource AccentBrush}"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="유사도 임계값" Style="{StaticResource Caption}" />
                            </DockPanel>
                            <Slider Minimum="50" Maximum="100"
                                    Value="{Binding SimilarityThreshold}"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True" />
                        </StackPanel>

                        <CheckBox IsChecked="{Binding UseVideoSimilarity}"
                                  Margin="0,0,0,4">
                            <StackPanel>
                                <TextBlock Text="비디오 유사도 비교" />
                                <TextBlock Text="비슷한 비디오 탐지 (FFmpeg 필요)"
                                           Style="{StaticResource Caption}" Margin="0,2,0,0" />
                            </StackPanel>
                        </CheckBox>

                        <!-- Video Similarity Threshold -->
                        <StackPanel Margin="24,4,0,0"
                                    Visibility="{Binding UseVideoSimilarity, Converter={StaticResource BoolToVisibilityConverter}}">
                            <DockPanel Margin="0,0,0,4">
                                <TextBlock Text="{Binding VideoSimilarityThreshold, StringFormat={}{0:0}%}"
                                           DockPanel.Dock="Right"
                                           Foreground="{StaticResource AccentBrush}"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="유사도 임계값" Style="{StaticResource Caption}" />
                            </DockPanel>
                            <Slider Minimum="50" Maximum="100"
                                    Value="{Binding VideoSimilarityThreshold}"
                                    TickFrequency="5"
                                    IsSnapToTickEnabled="True" />
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
