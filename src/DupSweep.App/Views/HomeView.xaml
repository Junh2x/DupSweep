<UserControl x:Class="DupSweep.App.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:HomeViewModel}"
             d:DesignHeight="700" d:DesignWidth="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="340" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Folder Selection -->
        <Grid Grid.Column="0" Margin="0,0,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Section Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="{DynamicResource Home.ScanFolders}"
                           Style="{StaticResource TitleLarge}" />
                <TextBlock Text="{DynamicResource Home.AddFolderHint}"
                           Style="{StaticResource Caption}"
                           Margin="0,4,0,0" />
            </StackPanel>

            <!-- Folder Drop Zone / List -->
            <Border Grid.Row="1"
                    Style="{StaticResource Card}">
                <Grid>
                    <!-- Empty State (Drop Zone) -->
                    <Border x:Name="DropZone"
                            BorderThickness="2"
                            CornerRadius="8"
                            Margin="0"
                            Visibility="{Binding SelectedFolders.Count, Converter={StaticResource InverseIntToVisibilityConverter}, FallbackValue=Visible}"
                            AllowDrop="True"
                            Drop="DropZone_Drop"
                            DragOver="DropZone_DragOver">
                        <Border.BorderBrush>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Rectangle StrokeDashArray="6 3"
                                               Stroke="{StaticResource BorderBrush}"
                                               StrokeThickness="2"
                                               Width="1" Height="1"
                                               RadiusX="0.5" RadiusY="0.5" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.BorderBrush>

                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Border Width="80" Height="80"
                                    CornerRadius="40"
                                    Background="{StaticResource BackgroundBrush}"
                                    HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="FolderPlus"
                                                         Width="40" Height="40"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Foreground="{StaticResource AccentBrush}" />
                            </Border>

                            <TextBlock Text="{DynamicResource Home.DropFolderHere}"
                                       Style="{StaticResource TitleMedium}"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,0" />
                            <TextBlock Text="{DynamicResource Home.OrClickBelow}"
                                       Style="{StaticResource Caption}"
                                       HorizontalAlignment="Center"
                                       Margin="0,6,0,20" />

                            <Button Content="{DynamicResource Home.BrowseFolder}"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding AddFolderCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="28,12" />
                        </StackPanel>
                    </Border>

                    <!-- Folder List -->
                    <DockPanel Visibility="{Binding SelectedFolders.Count, Converter={StaticResource IntToVisibilityConverter}, FallbackValue=Collapsed}">
                        <!-- Actions Bar -->
                        <Border DockPanel.Dock="Top"
                                Background="{StaticResource BackgroundBrush}"
                                CornerRadius="8"
                                Padding="8"
                                Margin="0,0,0,10">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                    <Button Content="{DynamicResource Home.ClearAll}"
                                            Style="{StaticResource GhostButton}"
                                            Command="{Binding ClearFoldersCommand}"
                                            Foreground="{StaticResource ErrorBrush}"
                                            Padding="12,6" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource PrimaryButton}"
                                            Command="{Binding AddFolderCommand}"
                                            Padding="16,8">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center" />
                                            <TextBlock Text="{DynamicResource Home.AddFolder}" Margin="8,0,0,0" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <!-- Folder Items -->
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SelectedFolders}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource BackgroundBrush}"
                                                CornerRadius="10"
                                                Padding="12,8"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="36" Height="36"
                                                        CornerRadius="8"
                                                        Background="{StaticResource AccentLightBrush}"
                                                        Opacity="0.15">
                                                </Border>
                                                <materialDesign:PackIcon Grid.Column="0"
                                                                         Kind="Folder"
                                                                         Width="24" Height="24"
                                                                         Foreground="{StaticResource AccentBrush}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center" />

                                                <StackPanel Grid.Column="1" Margin="16,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Path=., Converter={StaticResource PathToFolderNameConverter}}"
                                                               Style="{StaticResource TitleSmall}"
                                                               TextTrimming="CharacterEllipsis" />
                                                    <TextBlock Text="{Binding}"
                                                               Style="{StaticResource Caption}"
                                                               TextTrimming="CharacterEllipsis"
                                                               Margin="0,2,0,0" />
                                                </StackPanel>

                                                <Button Grid.Column="2"
                                                        Style="{StaticResource IconButton}"
                                                        Command="{Binding DataContext.RemoveFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                        CommandParameter="{Binding}"
                                                        ToolTip="{DynamicResource Home.RemoveFolder}">
                                                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Start Button -->
            <Button Grid.Row="2"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding StartScanCommand}"
                    IsEnabled="{Binding CanStartScan}"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0"
                    Padding="32,14">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" VerticalAlignment="Center" />
                    <TextBlock Text="{DynamicResource Home.StartScan}" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="15" />
                </StackPanel>
            </Button>
        </Grid>

        <!-- Right Panel - Options (Tab-based) -->
        <Border Grid.Column="1" Style="{StaticResource Card}" Padding="12">
            <TabControl Style="{StaticResource OptionsTabControl}">

                <!-- Tab 1: 파일 대상 -->
                <TabItem Header="{DynamicResource Home.TabFileTarget}" Style="{StaticResource OptionsTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,2,0">
                        <StackPanel>
                            <CheckBox IsChecked="{Binding ScanAllFiles}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,16">
                                <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                                    <materialDesign:PackIcon Kind="FileMultiple" Width="20" Height="20"
                                                             VerticalAlignment="Center" Margin="0,0,8,0"
                                                             Foreground="{StaticResource AccentBrush}" />
                                    <TextBlock Text="{DynamicResource Home.AllFiles}" VerticalAlignment="Center" FontWeight="SemiBold" />
                                </StackPanel>
                            </CheckBox>

                            <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,12" />

                            <TextBlock Text="{DynamicResource Home.SelectByCategory}"
                                       Style="{StaticResource Caption}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,10" />

                            <CheckBox IsChecked="{Binding ScanImages}"
                                      IsEnabled="{Binding ScanAllFiles, Converter={StaticResource InverseBooleanConverter}}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Image" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.CategoryImage}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="JPG, PNG, GIF, BMP, WebP, TIFF, ICO, HEIC"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding ScanVideos}"
                                      IsEnabled="{Binding ScanAllFiles, Converter={StaticResource InverseBooleanConverter}}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Video" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.CategoryVideo}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="MP4, AVI, MKV, MOV, WMV, FLV, WebM"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding ScanAudio}"
                                      IsEnabled="{Binding ScanAllFiles, Converter={StaticResource InverseBooleanConverter}}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="MusicNote" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.CategoryAudio}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="MP3, WAV, FLAC, AAC, OGG, WMA, M4A"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding ScanDocuments}"
                                      IsEnabled="{Binding ScanAllFiles, Converter={StaticResource InverseBooleanConverter}}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,4">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocument" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.CategoryDocument}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="PDF, DOC, DOCX, XLS, XLSX, PPT, TXT, HWP"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 2: 스캔 로직 -->
                <TabItem Header="{DynamicResource Home.TabScanLogic}" Style="{StaticResource OptionsTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,2,0">
                        <StackPanel>
                            <CheckBox IsChecked="{Binding UseHashComparison}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <TextBlock Text="{DynamicResource Home.Hash}" FontWeight="SemiBold" />
                                    <TextBlock Text="XxHash64, BLAKE3 해시 비교 감지"
                                               Style="{StaticResource Caption}" Margin="0,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding UseSizeComparison}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <TextBlock Text="{DynamicResource Home.FileSize}" />
                                    <TextBlock Text="파일 크기가 동일한 파일 감지"
                                               Style="{StaticResource Caption}" Margin="0,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding UseResolutionComparison}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <TextBlock Text="{DynamicResource Home.Resolution}" />
                                    <TextBlock Text="이미지/비디오 해상도가 동일한 파일 감지"
                                               Style="{StaticResource Caption}" Margin="0,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding MatchCreatedDate}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,12">
                                <StackPanel Margin="4,0,0,0">
                                    <TextBlock Text="{DynamicResource Home.CreationDate}" />
                                    <TextBlock Text="파일 생성 날짜가 동일한 파일 감지"
                                               Style="{StaticResource Caption}" Margin="0,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <CheckBox IsChecked="{Binding MatchModifiedDate}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,4">
                                <StackPanel Margin="4,0,0,0">
                                    <TextBlock Text="{DynamicResource Home.ModifiedDateMatch}" />
                                    <TextBlock Text="파일 수정 날짜가 동일한 파일 감지"
                                               Style="{StaticResource Caption}" Margin="0,4,0,0" />
                                </StackPanel>
                            </CheckBox>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 3: 유사도 비교 -->
                <TabItem Header="{DynamicResource Home.TabSimilarity}" Style="{StaticResource OptionsTabItem}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,2,0">
                        <StackPanel>
                            <TextBlock Text="퍼셉추얼 해싱 기반 유사 파일 탐지 (옵션)"
                                       Style="{StaticResource Caption}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,16" />

                            <CheckBox IsChecked="{Binding UseImageSimilarity}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,4">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ImageMultiple" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.ImageSimilarity}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="비슷해 보이는 이미지 탐지 (dHash)"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <StackPanel Margin="34,6,0,16"
                                        Visibility="{Binding UseImageSimilarity, Converter={StaticResource BoolToVisibilityConverter}}">
                                <DockPanel Margin="0,0,0,4">
                                    <TextBlock Text="{Binding SimilarityThreshold, StringFormat={}{0:0}%}"
                                               DockPanel.Dock="Right"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{DynamicResource Home.SimilarityThreshold}" Style="{StaticResource Caption}" />
                                </DockPanel>
                                <Slider Minimum="50" Maximum="100"
                                        Value="{Binding SimilarityThreshold}"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True" />
                            </StackPanel>

                            <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,12"
                                       Visibility="{Binding UseImageSimilarity, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                            <Separator Background="{StaticResource DividerBrush}" Margin="0,0,0,12"
                                       Visibility="{Binding UseImageSimilarity, Converter={StaticResource BoolToVisibilityConverter}}" />

                            <CheckBox IsChecked="{Binding UseVideoSimilarity}"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="26"
                                      Margin="0,0,0,4">
                                <StackPanel Margin="4,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="VideoBox" Width="20" Height="20"
                                                                 VerticalAlignment="Center" Margin="0,0,8,0"
                                                                 Foreground="{StaticResource AccentBrush}" />
                                        <TextBlock Text="{DynamicResource Home.VideoSimilarity}" VerticalAlignment="Center" />
                                    </StackPanel>
                                    <TextBlock Text="비슷한 비디오 탐지 (FFmpeg 필요)"
                                               Style="{StaticResource Caption}" Margin="28,4,0,0" />
                                </StackPanel>
                            </CheckBox>

                            <StackPanel Margin="34,6,0,0"
                                        Visibility="{Binding UseVideoSimilarity, Converter={StaticResource BoolToVisibilityConverter}}">
                                <DockPanel Margin="0,0,0,4">
                                    <TextBlock Text="{Binding VideoSimilarityThreshold, StringFormat={}{0:0}%}"
                                               DockPanel.Dock="Right"
                                               Foreground="{StaticResource AccentBrush}"
                                               FontWeight="SemiBold" />
                                    <TextBlock Text="{DynamicResource Home.SimilarityThreshold}" Style="{StaticResource Caption}" />
                                </DockPanel>
                                <Slider Minimum="50" Maximum="100"
                                        Value="{Binding VideoSimilarityThreshold}"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

            </TabControl>
        </Border>
    </Grid>
</UserControl>
