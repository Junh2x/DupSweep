<UserControl x:Class="DupSweep.App.Views.ResultsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:ResultsViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with filters -->
        <DockPanel Grid.Row="0" Margin="0,0,0,16">
            <StackPanel DockPanel.Dock="Left">
                <TextBlock Text="Duplicate Files Found"
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}" />
                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}" Opacity="0.6">
                    <Run Text="{Binding DuplicateGroups.Count, Mode=OneWay}" />
                    <Run Text="groups found" />
                </TextBlock>
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          SelectedValue="{Binding FilterType}"
                          SelectedValuePath="Content"
                          Width="120"
                          Margin="0,0,8,0">
                    <ComboBoxItem Content="All" />
                    <ComboBoxItem Content="Images" />
                    <ComboBoxItem Content="Videos" />
                    <ComboBoxItem Content="Audio" />
                </ComboBox>

                <materialDesign:PopupBox PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                    <materialDesign:PopupBox.ToggleContent>
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}" Content="Auto Select" />
                    </materialDesign:PopupBox.ToggleContent>
                    <StackPanel>
                        <Button Content="Keep First" Command="{Binding SelectFirstCommand}" />
                        <Button Content="Keep Newest" Command="{Binding SelectNewestCommand}" />
                        <Button Content="Keep Oldest" Command="{Binding SelectOldestCommand}" />
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </DockPanel>

        <!-- Results List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DuplicateGroupsView}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,16"
                                             materialDesign:ElevationAssist.Elevation="Dp1">
                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <DockPanel>
                                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                                            <TextBlock Text="{Binding Similarity, StringFormat={}{0:0}% similar}"
                                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,16,0" />
                                            <materialDesign:Chip Content="{Binding GroupType}"
                                                                 IconBackground="{DynamicResource PrimaryHueMidBrush}"
                                                                 IconForeground="White" />
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}">
                                                <Run Text="{Binding FileCount, Mode=OneWay}" />
                                                <Run Text="files" />
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Expander.Header>

                                <ItemsControl ItemsSource="{Binding Files}" Margin="16">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <materialDesign:Card Width="200" Margin="0,0,8,8"
                                                                 materialDesign:ElevationAssist.Elevation="Dp1">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="120" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <!-- Thumbnail -->
                                                    <Border Grid.Row="0" Background="{DynamicResource MaterialDesignDivider}">
                                                        <Grid>
                                                            <Image Source="{Binding ThumbnailData, Converter={StaticResource ByteArrayToImageSourceConverter}}"
                                                                   Stretch="UniformToFill"
                                                                   Visibility="{Binding ThumbnailData, Converter={StaticResource NullToVisibilityConverter}}" />
                                                            <materialDesign:PackIcon Kind="FileImage"
                                                                                      Width="48" Height="48"
                                                                                      HorizontalAlignment="Center"
                                                                                      VerticalAlignment="Center"
                                                                                      Opacity="0.3"
                                                                                      Visibility="{Binding ThumbnailData, Converter={StaticResource InverseNullToVisibilityConverter}}" />
                                                        </Grid>
                                                    </Border>

                                                    <!-- Checkbox overlay -->
                                                    <CheckBox Grid.Row="0"
                                                              IsChecked="{Binding IsSelected}"
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Top"
                                                              Margin="8" />

                                                    <!-- File Info -->
                                                    <StackPanel Grid.Row="1" Margin="8">
                                                        <TextBlock Text="{Binding FileName}"
                                                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                                   TextTrimming="CharacterEllipsis" />
                                                        <TextBlock Text="{Binding FormattedSize}"
                                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   Opacity="0.6" />
                                                        <TextBlock Text="{Binding FilePath}"
                                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Opacity="0.5" />
                                                        <TextBlock Text="{Binding ModifiedDate, StringFormat={}{0:yyyy-MM-dd}}"
                                                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                                   Opacity="0.6" />
                                                    </StackPanel>
                                                </Grid>
                                            </materialDesign:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Results Message -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="{Binding HasResults, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}">
            <materialDesign:PackIcon Kind="FileSearch"
                                     Width="64" Height="64"
                                     HorizontalAlignment="Center"
                                     Opacity="0.3" />
            <TextBlock Text="No results yet"
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,8" />
            <TextBlock Text="Run a scan to find duplicate files"
                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                       HorizontalAlignment="Center"
                       Opacity="0.6" />
        </StackPanel>

        <!-- Action Bar -->
        <materialDesign:Card Grid.Row="2"
                             materialDesign:ElevationAssist.Elevation="Dp4"
                             Margin="0,16,0,0"
                             Padding="16"
                             Visibility="{Binding HasResults, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" Margin="0,0,8,0">
                        <Run Text="{Binding SelectedFilesCount, Mode=OneWay}" />
                        <Run Text="files selected" />
                    </TextBlock>
                    <TextBlock VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}">
                        <Run Text="(" /><Run Text="{Binding FormattedPotentialSavings, Mode=OneWay}" /><Run Text=")" />
                    </TextBlock>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <Button Content="Move to Trash"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Command="{Binding MoveToTrashCommand}"
                            Margin="0,0,8,0" />
                    <Button Content="Delete Permanently"
                            Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                            Command="{Binding DeletePermanentlyCommand}" />
                </StackPanel>
            </DockPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
