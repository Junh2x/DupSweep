<UserControl x:Class="DupSweep.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:SettingsViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="560" Margin="0,0,0,20">
            <TextBlock Text="{DynamicResource Settings.Title}"
                       Style="{StaticResource HeadlineMedium}"
                       Margin="0,0,0,16" />

            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,12">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Appearance}"
                               Style="{StaticResource TitleMedium}"
                               Margin="0,0,0,12" />

                    <DockPanel>
                        <ComboBox DockPanel.Dock="Right"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding SelectedLanguage}"
                                  DisplayMemberPath="DisplayName"
                                  Width="130"
                                  materialDesign:ComboBoxAssist.ShowSelectedItem="True" />
                        <StackPanel Margin="0,4,16,0">
                            <TextBlock Text="{DynamicResource Settings.Language}" Style="{StaticResource BodyMedium}" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,12">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Deletion}"
                               Style="{StaticResource TitleMedium}"
                               Margin="0,0,0,12" />

                    <DockPanel>
                        <ToggleButton DockPanel.Dock="Right"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding ShowConfirmationDialog}" />
                        <StackPanel Margin="0,2,16,0">
                            <TextBlock Text="{DynamicResource Settings.ShowConfirmDialog}" Style="{StaticResource BodyMedium}" />
                            <TextBlock Text="{DynamicResource Settings.ConfirmBeforeDelete}"
                                       Style="{StaticResource Caption}"
                                       Opacity="0.75" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,12">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Performance}"
                               Style="{StaticResource TitleMedium}"
                               Margin="0,0,0,12" />

                    <StackPanel Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="{DynamicResource Settings.ParallelThreads}" Style="{StaticResource BodyMedium}" />
                            <TextBlock Text="{Binding ParallelThreads}" Style="{StaticResource BodyMedium}" Margin="4,0,0,0" FontWeight="SemiBold" />
                        </StackPanel>
                        <Slider Minimum="1"
                                Maximum="32"
                                Value="{Binding ParallelThreads}"
                                TickFrequency="1"
                                IsSnapToTickEnabled="True"
                                AutoToolTipPlacement="None" />
                        <TextBlock Text="{DynamicResource Settings.ParallelThreadsHint}"
                                   Style="{StaticResource Caption}"
                                   Opacity="0.75" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,12">
                <StackPanel Margin="16">
                    <TextBlock Text="FFmpeg"
                               Style="{StaticResource TitleMedium}"
                               Margin="0,0,0,12" />

                    <DockPanel>
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="{DynamicResource Settings.Browse}"
                                Command="{Binding BrowseFFmpegPathCommand}" />
                        <StackPanel Margin="0,2,16,0">
                            <TextBlock Text="{DynamicResource Settings.FFmpegPath}" Style="{StaticResource BodyMedium}" />
                            <TextBlock Text="{Binding FfmpegPath, TargetNullValue={DynamicResource Settings.NotSet}}"
                                       Style="{StaticResource Caption}"
                                       Opacity="0.75"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <Button Content="{DynamicResource Settings.ResetToDefaults}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ResetToDefaultsCommand}"
                    HorizontalAlignment="Left" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
