<UserControl x:Class="DupSweep.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:SettingsViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="600" Margin="0,0,0,32">
            <!-- Header -->
            <TextBlock Text="환경설정"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,24" />

            <!-- Appearance -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="외관"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <ComboBox DockPanel.Dock="Right"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectedItem="{Binding ThumbnailSize}"
                                  Width="100">
                            <ComboBoxItem Content="64" />
                            <ComboBoxItem Content="128" />
                            <ComboBoxItem Content="256" />
                        </ComboBox>
                        <StackPanel>
                            <TextBlock Text="썸네일 크기" />
                            <TextBlock Text="미리보기 썸네일 크기"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Deletion -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="삭제"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <ToggleButton DockPanel.Dock="Right"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding ShowConfirmationDialog}" />
                        <StackPanel>
                            <TextBlock Text="확인 대화 상자 표시" />
                            <TextBlock Text="파일 삭제 전 확인"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Performance -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="성능"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <StackPanel Margin="0,0,0,8">
                        <TextBlock>
                            <Run Text="병렬 스레드:" />
                            <Run Text="{Binding ParallelThreads}" />
                        </TextBlock>
                        <Slider Minimum="1"
                                Maximum="32"
                                Value="{Binding ParallelThreads}"
                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                TickFrequency="1" />
                        <TextBlock Text="병렬 처리를 위한 스레드 수"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Opacity="0.6" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- FFmpeg -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="FFmpeg"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="찾아보기"
                                Command="{Binding BrowseFFmpegPathCommand}" />
                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="FFmpeg 경로" />
                            <TextBlock Text="{Binding FfmpegPath, TargetNullValue='설정되지 않음'}"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Reset -->
            <Button Content="기본값으로 초기화"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ResetToDefaultsCommand}"
                    HorizontalAlignment="Left" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
