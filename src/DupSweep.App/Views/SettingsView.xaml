<UserControl x:Class="DupSweep.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:SettingsViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="600" Margin="0,0,0,32">
            <!-- Header -->
            <TextBlock Text="{DynamicResource Settings.Title}"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       Margin="0,0,0,24" />

            <!-- Appearance -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Appearance}"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <ComboBox DockPanel.Dock="Right"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  SelectedItem="{Binding ThumbnailSize}"
                                  Width="100">
                            <ComboBoxItem Content="64" />
                            <ComboBoxItem Content="128" />
                            <ComboBoxItem Content="256" />
                        </ComboBox>
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Settings.ThumbnailSize}" />
                            <TextBlock Text="{DynamicResource Settings.ThumbnailSizeHint}"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6" />
                        </StackPanel>
                    </DockPanel>

                    <Separator Background="{DynamicResource MaterialDesignDivider}" Margin="0,16" />

                    <DockPanel>
                        <ComboBox DockPanel.Dock="Right"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  ItemsSource="{Binding AvailableLanguages}"
                                  SelectedItem="{Binding SelectedLanguage}"
                                  DisplayMemberPath="DisplayName"
                                  Width="140" />
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Settings.Language}" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Deletion -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Deletion}"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <ToggleButton DockPanel.Dock="Right"
                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                      IsChecked="{Binding ShowConfirmationDialog}" />
                        <StackPanel>
                            <TextBlock Text="{DynamicResource Settings.ShowConfirmDialog}" />
                            <TextBlock Text="{DynamicResource Settings.ConfirmBeforeDelete}"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Performance -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="{DynamicResource Settings.Performance}"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <StackPanel Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{DynamicResource Settings.ParallelThreads}" />
                            <TextBlock Text="{Binding ParallelThreads}" Margin="4,0,0,0" />
                        </StackPanel>
                        <Slider Minimum="1"
                                Maximum="32"
                                Value="{Binding ParallelThreads}"
                                Style="{StaticResource MaterialDesignDiscreteSlider}"
                                TickFrequency="1" />
                        <TextBlock Text="{DynamicResource Settings.ParallelThreadsHint}"
                                   Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                   Opacity="0.6" />
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- FFmpeg -->
            <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" Margin="0,0,0,16">
                <StackPanel Margin="16">
                    <TextBlock Text="FFmpeg"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="0,0,0,16" />

                    <DockPanel>
                        <Button DockPanel.Dock="Right"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Content="{DynamicResource Settings.Browse}"
                                Command="{Binding BrowseFFmpegPathCommand}" />
                        <StackPanel Margin="0,0,16,0">
                            <TextBlock Text="{DynamicResource Settings.FFmpegPath}" />
                            <TextBlock Text="{Binding FfmpegPath, TargetNullValue='설정되지 않음'}"
                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                       Opacity="0.6"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Reset -->
            <Button Content="{DynamicResource Settings.ResetToDefaults}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Command="{Binding ResetToDefaultsCommand}"
                    HorizontalAlignment="Left" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
