<Window x:Class="DupSweep.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
        xmlns:views="clr-namespace:DupSweep.App.Views"
        xmlns:controls="clr-namespace:DupSweep.App.Controls"
        mc:Ignorable="d"
        Title="DupSweep"
        Height="800" Width="1280"
        MinHeight="700" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        FontFamily="{StaticResource PrimaryFont}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ScanViewModel}">
            <views:ScanView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:ResultsViewModel}">
            <views:ResultsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:FolderTreeViewModel}">
            <controls:FolderTreeView />
        </DataTemplate>

        <!-- Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#B0BEC5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,14" />
            <Setter Property="Margin" Value="8,2" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A3A5F" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Shadow layer (separate from content to allow clipping) -->
        <Border Background="{StaticResource BackgroundBrush}"
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect BlurRadius="24"
                                  ShadowDepth="2"
                                  Direction="270"
                                  Color="#000000"
                                  Opacity="0.2" />
            </Border.Effect>
        </Border>

        <!-- Content layer with clip -->
        <Border x:Name="MainBorder"
                Background="{StaticResource BackgroundBrush}"
                CornerRadius="12"
                BorderBrush="#C0C0C0"
                BorderThickness="1">
            <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="{StaticResource SidebarGradientBrush}"
                    CornerRadius="11,0,0,11">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Intentionally empty: Windows-style controls are in the top-right bar -->

                    <!-- Logo Section -->
                    <StackPanel Grid.Row="1" Margin="24,16,24,32">
                        <StackPanel Orientation="Horizontal">
                            <Border Width="44" Height="44"
                                    CornerRadius="10"
                                    Background="{StaticResource AccentBrush}">
                                <materialDesign:PackIcon Kind="ContentDuplicate"
                                                         Width="26" Height="26"
                                                         Foreground="White"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center" />
                            </Border>
                            <StackPanel Margin="14,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="DupSweep"
                                           FontSize="22"
                                           FontWeight="Bold"
                                           Foreground="White" />
                                <TextBlock Text="{DynamicResource App.Subtitle}"
                                           FontSize="11"
                                           Foreground="#78909C"
                                           Margin="0,-2,0,0" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="{DynamicResource Nav.MainMenu}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#546E7A"
                                   Margin="24,0,0,12" />

                        <RadioButton x:Name="HomeNav"
                                     Style="{StaticResource NavButton}"
                                     IsChecked="True"
                                     Checked="NavItem_Checked"
                                     Tag="0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" Width="22" Height="22" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource Nav.Home}" FontSize="14" FontWeight="Medium" Margin="14,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>

                        <RadioButton x:Name="ScanNav"
                                     Style="{StaticResource NavButton}"
                                     Checked="NavItem_Checked"
                                     Tag="1">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="22" Height="22" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource Nav.Scan}" FontSize="14" FontWeight="Medium" Margin="14,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>

                        <Separator Margin="24,20" Background="#263850" />

                        <TextBlock Text="{DynamicResource Nav.Tools}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#546E7A"
                                   Margin="24,0,0,12" />

                        <RadioButton x:Name="FolderTreeNav"
                                     Style="{StaticResource NavButton}"
                                     Checked="NavItem_Checked"
                                     Tag="4">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileTree" Width="22" Height="22" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource Nav.FolderTree}" FontSize="14" FontWeight="Medium" Margin="14,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>

                        <Separator Margin="24,20" Background="#263850" />

                        <TextBlock Text="{DynamicResource Nav.Settings}"
                                   FontSize="11"
                                   FontWeight="SemiBold"
                                   Foreground="#546E7A"
                                   Margin="24,0,0,12" />

                        <RadioButton x:Name="SettingsNav"
                                     Style="{StaticResource NavButton}"
                                     Checked="NavItem_Checked"
                                     Tag="3">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CogOutline" Width="22" Height="22" VerticalAlignment="Center" />
                                <TextBlock Text="{DynamicResource Nav.SettingsLabel}" FontSize="14" FontWeight="Medium" Margin="14,0,0,0" VerticalAlignment="Center" />
                            </StackPanel>
                        </RadioButton>
                    </StackPanel>

                    <!-- Footer -->
                    <Border Grid.Row="3"
                            Background="#0F1E33"
                            CornerRadius="0,0,0,11"
                            Padding="20,16">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="InformationOutline"
                                                         Width="16" Height="16"
                                                         Foreground="#546E7A"
                                                         VerticalAlignment="Center" />
                                <TextBlock Text="Version 2.0.0"
                                           FontSize="12"
                                           Foreground="#546E7A"
                                           Margin="8,0,0,0"
                                           VerticalAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Grid.Row="0"
                        Background="{StaticResource SurfaceBrush}"
                        CornerRadius="0,11,0,0"
                        Padding="24,16"
                        MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Page Title -->
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="{Binding Title}"
                                       Style="{StaticResource HeadlineMedium}" />
                            <TextBlock x:Name="PageSubtitle"
                                       Text="{DynamicResource Subtitle.Home}"
                                       Style="{StaticResource Caption}"
                                       Margin="0,2,0,0" />
                        </StackPanel>

                        <!-- Actions -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <!-- Window Controls -->
                            <Button Style="{StaticResource IconButton}"
                                    Click="MinimizeButton_Click"
                                    ToolTip="{DynamicResource Window.Minimize}">
                                <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18" />
                            </Button>
                            <Button Style="{StaticResource IconButton}"
                                    Click="MaximizeButton_Click"
                                    ToolTip="{DynamicResource Window.Maximize}">
                                <materialDesign:PackIcon Kind="WindowMaximize" Width="18" Height="18" />
                            </Button>
                            <Button Style="{StaticResource IconButton}"
                                    Click="CloseButton_Click"
                                    ToolTip="{DynamicResource Window.Close}">
                                <materialDesign:PackIcon Kind="Close" Width="18" Height="18" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content -->
                <Border Grid.Row="1"
                        Background="{StaticResource BackgroundBrush}"
                        CornerRadius="0,0,11,0"
                        ClipToBounds="True">
                    <Grid>
                        <ContentControl Content="{Binding CurrentView}"
                                        Margin="16,12,16,16" />

                        <!-- Notification Host - Toast notifications overlay -->
                        <controls:NotificationHost VerticalAlignment="Bottom"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,0,16,16" />
                    </Grid>
                </Border>
            </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
