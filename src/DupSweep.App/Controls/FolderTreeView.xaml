<UserControl x:Class="DupSweep.App.Controls.FolderTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:FolderTreeViewModel}"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header (hidden when no folder selected) -->
        <Border Grid.Row="0" Background="{DynamicResource MaterialDesignCardBackground}"
                Padding="6,4" Margin="0,0,0,4">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding HasData}" Value="False" />
                                <Condition Binding="{Binding IsLoading}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Folder" Width="18" Height="18"
                                             VerticalAlignment="Center" Margin="0,0,6,0"
                                             Foreground="{DynamicResource PrimaryHueMidBrush}" />
                    <TextBlock Text="{Binding SelectedFolderName}" FontWeight="Medium" FontSize="13"
                               VerticalAlignment="Center" />
                    <TextBlock Text=" - " Opacity="0.5" VerticalAlignment="Center"
                               Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <TextBlock Text="{Binding FormattedTotalSize}" FontSize="13"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               VerticalAlignment="Center"
                               Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>

                <Button Grid.Column="1" Content="{DynamicResource FolderTree.SelectFolder}"
                        Command="{Binding SelectFolderCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Height="28" Padding="12,0"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}" />
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Empty State - Centered CTA -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding HasData}" Value="False" />
                                    <Condition Binding="{Binding IsLoading}" Value="False" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Visibility" Value="Visible" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>

                <Border Width="80" Height="80"
                        CornerRadius="40"
                        Background="{StaticResource BackgroundBrush}"
                        HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="FolderSearch"
                                             Width="40" Height="40"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Foreground="{StaticResource AccentBrush}" />
                </Border>

                <TextBlock Text="{DynamicResource FolderTree.SelectFolderHint}"
                           Style="{StaticResource TitleMedium}"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0" />
                <TextBlock Text="{DynamicResource FolderTree.SelectFolderToAnalyzeHint}"
                           Style="{StaticResource Caption}"
                           HorizontalAlignment="Center"
                           Margin="0,6,0,20" />

                <Button Style="{StaticResource SecondaryButton}"
                        Command="{Binding SelectFolderCommand}"
                        HorizontalAlignment="Center"
                        Padding="28,12">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOpen"
                                                 Width="20" Height="20"
                                                 VerticalAlignment="Center" />
                        <TextBlock Text="{DynamicResource FolderTree.SelectFolder}"
                                   Margin="8,0,0,0"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- Loading -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Width="32" Height="32" IsIndeterminate="True" />
                <TextBlock Text="{Binding LoadingMessage}" Margin="0,8,0,0" Opacity="0.7"
                           HorizontalAlignment="Center" />
                <TextBlock Text="{Binding AnalyzedFolderCount, StringFormat={}{0:N0}개 폴더 분석됨}"
                           Margin="0,4,0,0" FontSize="11" Opacity="0.5" HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Data View -->
            <Grid Visibility="{Binding HasData, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Breadcrumb -->
                <Border Grid.Row="0" Background="{DynamicResource MaterialDesignToolBarBackground}"
                        Padding="6,4" Margin="0,0,0,4">
                    <ItemsControl ItemsSource="{Binding Breadcrumbs}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text=">" Opacity="0.4" Margin="4,0"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding Depth, Converter={StaticResource IntToVisibilityConverter}}" />
                                    <Button Content="{Binding Name}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Height="22" Padding="6,0" FontSize="11"
                                            Click="Breadcrumb_Click"
                                            ToolTip="{Binding FullPath}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Bar Charts -->
                <Border Grid.Row="1" Background="{DynamicResource MaterialDesignCardBackground}" Padding="6,2">
                    <ItemsControl ItemsSource="{Binding BarLevels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2" Height="28">
                                    <TextBlock Text="{Binding Depth, StringFormat=L{0}}"
                                               Width="22" FontSize="11" Opacity="0.4"
                                               VerticalAlignment="Center" />

                                    <Border Margin="26,0,0,0" Background="{DynamicResource MaterialDesignDivider}"
                                            CornerRadius="3">
                                        <ItemsControl ItemsSource="{Binding Items}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <Canvas />
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Height="28" CornerRadius="0"
                                                            Cursor="Hand"
                                                            MouseLeftButtonDown="BarSegment_Click"
                                                            ToolTipService.InitialShowDelay="0"
                                                            ToolTipService.BetweenShowDelay="0">
                                                        <Border.ToolTip>
                                                            <ToolTip>
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                                                    <TextBlock>
                                                                        <Run Text="{Binding FormattedSize, Mode=OneWay}" />
                                                                        <Run Text=" (" /><Run Text="{Binding PercentOfTotal, StringFormat={}{0:0.1}%, Mode=OneWay}" /><Run Text=")" />
                                                                    </TextBlock>
                                                                </StackPanel>
                                                            </ToolTip>
                                                        </Border.ToolTip>
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <SolidColorBrush Color="{Binding Color}" />
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Setter Property="Opacity" Value="0.85" />
                                                                <Setter Property="BorderThickness" Value="0" />
                                                                <Setter Property="BorderBrush" Value="Transparent" />
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Opacity" Value="1" />
                                                                    </Trigger>
                                                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                        <Setter Property="Opacity" Value="1" />
                                                                        <Setter Property="BorderThickness" Value="2" />
                                                                        <Setter Property="BorderBrush" Value="#666666" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <Grid>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="11" Foreground="White"
                                                                       VerticalAlignment="Center"
                                                                       Margin="6,0" TextTrimming="CharacterEllipsis">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="FontWeight" Value="Normal" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding WidthPercent, Converter={StaticResource LessThanConverter}, ConverterParameter=8}" Value="True">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                                <Setter Property="FontWeight" Value="Bold" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                            <ItemsControl.ItemContainerStyle>
                                                <Style TargetType="ContentPresenter">
                                                    <Setter Property="Canvas.Left">
                                                        <Setter.Value>
                                                            <MultiBinding Converter="{StaticResource PercentToCanvasLeftConverter}">
                                                                <Binding Path="OffsetPercent" />
                                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="Width">
                                                        <Setter.Value>
                                                            <MultiBinding Converter="{StaticResource PercentToWidthMultiConverter}">
                                                                <Binding Path="WidthPercent" />
                                                                <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=ItemsControl}" />
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ItemsControl.ItemContainerStyle>
                                        </ItemsControl>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <!-- Separator -->
                <GridSplitter Grid.Row="2" Height="4" HorizontalAlignment="Stretch"
                              Background="Transparent" />

                <!-- File/Folder List -->
                <Border Grid.Row="3" Background="{DynamicResource MaterialDesignCardBackground}"
                        Padding="8" Margin="0,4,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- 전체 선택 CheckBox -->
                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding IsAllChecked, Mode=OneWay}"
                                      Command="{Binding ToggleSelectAllCommand}"
                                      VerticalAlignment="Center" Margin="0,0,6,0"
                                      ToolTip="{DynamicResource FolderTree.SelectAll}"
                                      Visibility="{Binding CurrentFiles.Count, Converter={StaticResource IntToVisibilityConverter}}">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="0.85" ScaleY="0.85" />
                                </CheckBox.LayoutTransform>
                            </CheckBox>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="FolderOpen" Width="14" Height="14"
                                                          VerticalAlignment="Center" Margin="0,0,4,0" Opacity="0.6" />
                                <TextBlock Text="{DynamicResource FolderTree.FolderFileList}" FontSize="11" FontWeight="Medium" Opacity="0.7" />
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="{Binding CurrentFolderFileInfo}" FontSize="10"
                                       Margin="8,0,0,0" Opacity="0.5" VerticalAlignment="Center" />

                            <!-- 선택 요약 + 삭제 버튼 -->
                            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center"
                                        Visibility="{Binding CheckedCount, Converter={StaticResource IntToVisibilityConverter}}">
                                <TextBlock VerticalAlignment="Center" FontSize="11" Margin="0,0,8,0" Opacity="0.7">
                                    <Run Text="{Binding CheckedCount, Mode=OneWay}" />
                                    <Run Text="{DynamicResource FolderTree.ItemsSelected}" />
                                    <Run Text=" · " />
                                    <Run Text="{Binding FormattedCheckedSize, Mode=OneWay}" />
                                </TextBlock>

                                <Button Command="{Binding MoveToTrashCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Height="24" Padding="8,0" FontSize="11"
                                        Margin="0,0,4,0"
                                        ToolTip="{DynamicResource Delete.ModeTrash}"
                                        IsEnabled="{Binding IsDeleting, Converter={StaticResource InverseBooleanConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="DeleteOutline" Width="14" Height="14"
                                                                  VerticalAlignment="Center" Margin="0,0,4,0" />
                                        <TextBlock Text="{DynamicResource Results.Trash}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                                <Button Command="{Binding DeletePermanentlyCommand}"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Height="24" Padding="8,0" FontSize="11"
                                        Foreground="#E53935"
                                        ToolTip="{DynamicResource Delete.ModePermanent}"
                                        IsEnabled="{Binding IsDeleting, Converter={StaticResource InverseBooleanConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Delete" Width="14" Height="14"
                                                                  VerticalAlignment="Center" Margin="0,0,4,0" />
                                        <TextBlock Text="{DynamicResource Results.Delete}" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding CurrentFiles}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,4" Margin="0"
                                                BorderBrush="#D0D4D8"
                                                BorderThickness="0,0,0,1">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="White" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                                            <Setter Property="Background" Value="#E3F2FD" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="70" />
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0" IsChecked="{Binding IsChecked}"
                                                          VerticalAlignment="Center" Margin="0,0,4,0">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>

                                                <materialDesign:PackIcon Grid.Column="1" Width="16" Height="16"
                                                                          VerticalAlignment="Center" Margin="0,0,6,0">
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="File" />
                                                            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
                                                            <Setter Property="Opacity" Value="0.5" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsFolder}" Value="True">
                                                                    <Setter Property="Kind" Value="Folder" />
                                                                    <Setter Property="Foreground" Value="#FFC107" />
                                                                    <Setter Property="Opacity" Value="0.9" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>

                                                <TextBlock Grid.Column="2" Text="{Binding Name}"
                                                           FontSize="12" TextTrimming="CharacterEllipsis"
                                                           VerticalAlignment="Center"
                                                           ToolTip="{Binding Name}" />
                                                <TextBlock Grid.Column="3" Text="{Binding FormattedSize}"
                                                           FontSize="11" Opacity="0.6"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Right" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- Empty file list -->
                        <TextBlock Grid.Row="1" Text="{DynamicResource FolderTree.SelectFolderToShowList}"
                                   FontSize="11" Opacity="0.4" HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentFiles.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
