<UserControl x:Class="DupSweep.App.Controls.FolderTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:DupSweep.App.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewmodels:FolderTreeViewModel}"
             d:DesignHeight="500" d:DesignWidth="350">

    <UserControl.Resources>
        <!-- Folder Node Template -->
        <HierarchicalDataTemplate x:Key="FolderNodeTemplate"
                                  DataType="{x:Type viewmodels:FolderNodeViewModel}"
                                  ItemsSource="{Binding Children}">
            <Border Padding="4,6" Cursor="Hand">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <materialDesign:PackIcon Grid.Column="0"
                                             Kind="{Binding IconKind}"
                                             Width="20" Height="20"
                                             VerticalAlignment="Center"
                                             Foreground="{Binding IsDrive, Converter={StaticResource BoolToDriveColorConverter}, FallbackValue={StaticResource AccentBrush}}" />

                    <!-- Name and Info -->
                    <StackPanel Grid.Column="1" Margin="10,0,8,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding DisplayName}"
                                   Style="{StaticResource BodyMedium}"
                                   TextTrimming="CharacterEllipsis"
                                   Opacity="{Binding IsHidden, Converter={StaticResource BoolToOpacityConverter}, FallbackValue=1}" />

                        <!-- Drive Info -->
                        <StackPanel Visibility="{Binding IsDrive, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Margin="0,2,0,0">
                            <Grid>
                                <ProgressBar Value="{Binding UsagePercent}"
                                             Maximum="100"
                                             Height="4"
                                             Foreground="{Binding UsagePercent, Converter={StaticResource UsageToColorConverter}}"
                                             Background="{StaticResource DividerBrush}" />
                            </Grid>
                            <TextBlock Style="{StaticResource Caption}" Margin="0,2,0,0">
                                <Run Text="{Binding FormattedFreeSpace, Mode=OneWay}" />
                                <Run Text="free of" />
                                <Run Text="{Binding FormattedTotalSize, Mode=OneWay}" />
                            </TextBlock>
                        </StackPanel>

                        <!-- Folder Size (when calculated) -->
                        <TextBlock Visibility="{Binding IsSizeCalculated, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Style="{StaticResource Caption}"
                                   Margin="0,2,0,0">
                            <Run Text="{Binding FormattedSize, Mode=OneWay}" />
                            <Run Text="(" /><Run Text="{Binding FileCount, Mode=OneWay}" /><Run Text=" files)" />
                        </TextBlock>
                    </StackPanel>

                    <!-- Loading Indicator -->
                    <ProgressBar Grid.Column="2"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="16" Height="16"
                                 IsIndeterminate="True"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" />

                    <!-- Size Calculating Indicator -->
                    <ProgressBar Grid.Column="2"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="16" Height="16"
                                 IsIndeterminate="True"
                                 Visibility="{Binding IsSizeCalculating, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>
            </Border>
        </HierarchicalDataTemplate>

        <!-- TreeView Item Container Style -->
        <Style x:Key="FolderTreeViewItemStyle" TargetType="TreeViewItem" BasedOn="{StaticResource MaterialDesignTreeViewItem}">
            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
            <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
            <Setter Property="Padding" Value="0" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundBrush}"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,12">
            <DockPanel>
                <Button DockPanel.Dock="Right"
                        Style="{StaticResource IconButton}"
                        ToolTip="Refresh"
                        Click="RefreshButton_Click">
                    <materialDesign:PackIcon Kind="Refresh" Width="18" Height="18" />
                </Button>
                <StackPanel>
                    <TextBlock Text="Folder Browser"
                               Style="{StaticResource TitleSmall}" />
                    <TextBlock Text="Select folders to scan"
                               Style="{StaticResource Caption}" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Tree View -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Padding="8">
            <Grid>
                <!-- Loading State -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="40" Height="40"
                                 IsIndeterminate="True"
                                 HorizontalAlignment="Center" />
                    <TextBlock Text="{Binding LoadingMessage}"
                               Style="{StaticResource Caption}"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0" />
                </StackPanel>

                <!-- Tree View -->
                <TreeView x:Name="FolderTree"
                          ItemsSource="{Binding RootNodes}"
                          ItemTemplate="{StaticResource FolderNodeTemplate}"
                          ItemContainerStyle="{StaticResource FolderTreeViewItemStyle}"
                          VirtualizingStackPanel.IsVirtualizing="True"
                          VirtualizingStackPanel.VirtualizationMode="Recycling"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                          TreeViewItem.Expanded="TreeViewItem_Expanded"
                          SelectedItemChanged="FolderTree_SelectedItemChanged">
                </TreeView>
            </Grid>
        </Border>
    </Grid>
</UserControl>
